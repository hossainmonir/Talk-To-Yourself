<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/boxxontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/line1"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="30dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/background"
                android:layout_marginEnd="10dp">
                <Button
                    android:onClick="MedicalRecord"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/medicalrecord"
                    android:background="@drawable/card_button"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:text="My Account" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:background="@color/background"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="30dp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp">

                <Button
                    android:onClick="MentalHealthBlog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mentalhealthblog"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:background="@drawable/card_button"
                    android:text="@string/mental_health_blog" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="30dp"
                android:paddingBottom="5dp"
                android:background="@color/background"
                android:layout_marginEnd="10dp">
                <Button
                    android:onClick="MedicineLocator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/medicinelocator"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:background="@drawable/card_button"
                    android:text="@string/medicine_locator" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="30dp"
                android:background="@color/background"
                android:paddingBottom="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp">
                <Button
                    android:onClick="DoctorAppointment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/card_button"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/text"
                    android:text="@string/appointment" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_below="@+id/boxxontainer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/buttonstyle"
        android:text="@string/live_with_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry" />



</RelativeLayout>